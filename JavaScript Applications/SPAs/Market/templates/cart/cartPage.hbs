{{#if isLogged}}
    <section id="viewCart">
        <h1>My Cart</h1>
        <div class="products" id="cartProducts">
            <table>
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each cartItems}}
                    {{> cart}}
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
{{else}}
    <p>Sorry, you're not authorized. Please <a href="#/login">Login</a> to view this page. If you haven't registered,
        you can <a href="#/register">create an account</a>.</p>
{{/if}}