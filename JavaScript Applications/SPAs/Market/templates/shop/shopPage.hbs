{{#if isLogged}}
    <section id="viewShop">
        <h1>Products</h1>
        <div class="products" id="shopProducts">
            <table>
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each products}}
                    {{> product}}
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
{{else}}
    <p>Sorry, you're not authorized. Please <a href="#/login">Login</a> to view this page. If you haven't registered,
        you can <a href="#/register">create an account</a>.</p>
{{/if}}