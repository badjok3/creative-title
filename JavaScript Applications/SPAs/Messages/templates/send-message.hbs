{{#if loggedIn}}
    <section id="viewSendMessage">
        <h1>Send Message</h1>
        <form id="formSendMessage" action="#/sendMessage" method="post">
            <div>Recipient:</div>
            <div>
                <select name="recipient" required id="msgRecipientUsername">
                    {{#each recipients}}
                        <option value="{{name}}">{{username}} ({{name}})</option>
                    {{/each}}
                </select>
            </div>
            <div>Message Text:</div>
            <div><input type="text" name="text" required id="msgText"/></div>
            <div><input type="submit" value="Send"/></div>
        </form>
    </section>
{{else}}
    <p>Sorry, you're not authorized. Please <a href="#/login">Login</a> to view this page. If you don't have an account, you can <a href="#/register">create an account</a>.</p>
{{/if}}


