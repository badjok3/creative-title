{{#if loggedIn}}
    <section id="viewMyMessages">
        <h1>My Messages</h1>
        <div class="messages" id="myMessages">
            <table>
                <thead>
                <tr>
                    <th>From</th>
                    <th>Message</th>
                    <th>Date Received</th>
                </tr>
                </thead>
                <tbody>
                {{#each currentUserMessages}}
                    <tr>
                        <td>{{sender}}</td>
                        <td>{{content}}</td>
                        <td>{{date}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
{{else}}
    <p>Sorry, you're not authorized. Please <a href="#/login">Login</a>  to view this page. If you don't have an account, you can <a href="#/register">create an account</a>.</p>
{{/if}}

